<div class="row">
<div class="col-md-4 col-md-offset-4 col-xs-12" style="text-align: left;">
  <h2 class="recommend">We recommend you use your Google account with teamboard.</h2>
  <div>
  <% if @invite_token == nil %>
  <%= link_to "Sign up with Google", "/users/auth/google_oauth2", id: "sign_in", class: "btn tb-btn" %>
  <% end %>
  <% if @invite_token != nil %>
  <%= link_to "Sign up with Google", "/users/auth/google_oauth2?token=#{@invite_token}", id: "sign_in", class: "btn tb-btn" %>
  <% end %>
  </div>

  <div class="or">-OR-</div>

  <h2 class="recommend">Sign up with your email</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <p class="bg-danger">
    <%= devise_error_messages! %>
    </p>
    <% if @invite_token != nil %>
      <%= hidden_field_tag :invite_token, @invite_token %>
    <% end %>

    <div class="form-group field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group actions">
      <%= f.submit "Sign up", class: "btn tb-btn btn-signup"%>
    </div>
  <% end %>

  <div class="or">-OR-</div>

  <h2 class="recommend">Sign up with your Facebook account</h2>
  <div class="sign-up-bottom">
  <%= link_to "Sign in with Facebook", "/users/auth/facebook", id: "sign_in_facebook", class: "btn tb-btn btn-sign-up" %>
  </div>

</div>
</div>
