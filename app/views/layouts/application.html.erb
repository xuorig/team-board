<!DOCTYPE html>
<html class="bluebackbround">
<head>
  <title>TeamBoard</title>
  <base href="/" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body  ng-app="teamboard" style="background-color: #2980b9 !important;">
  <div class="main-logo"></div>
  <ul class="sidebar" ng-controller="MenuController">
    <li id="user-menu" class="sidebar-item">
      <a id="toggle-user-menu" href="#">
          <i class="glyphicon glyphicon-user"></i>
          <!--%= current_user.name %-->
          Marc-Andre Giroux
      </a>
      <ul class="sidebar-submenu">
        <li class="sidebar-submenu-item">
          <a href="#">
            <i class="glyphicon glyphicon-user"></i>
            Profile
          </a>
        </li>
        <li class="sidebar-submenu-item">
          <a href="#">
            <i class="glyphicon glyphicon-cog"></i>
            Settings
          </a>
        </li>
        <li class="sidebar-submenu-item">
          <a class="signoutlink" href="signout">
            <i class="glyphicon glyphicon-off"></i> Log Out
          </a>
        </li>
      </ul>
    </li>
    <li ng-class="{current: isCurrentPath('/projects')}" class="sidebar-item">  
      <a href="#/projects"><i class="glyphicon glyphicon-th-list"></i> Projects</a>
    </li>
    <li ng-class="{current: isCurrentPath('/teams')}" class="sidebar-item">
      <a href="#/teams"><i class="glyphicon glyphicon-globe"></i> My Teams</a>
    </li>
    <li ng-class="{current: isCurrentPath('/boards')}" class="sidebar-item">
      <a href="#/boards"><i class="glyphicon glyphicon-th"></i> Boards</a>
    </li>
    <li ng-class="{current: isCurrentPath('/calendar')}" class="sidebar-item">
      <a href="#/calendar"><i class="glyphicon glyphicon-calendar"></i> Calendar</a>
    </li>
    <li ng-class="{current: isCurrentPath('/about')}" class="sidebar-item">
      <a href="#/about"><i class="glyphicon glyphicon-info-sign"></i> About</a>
    </li>
    
  </ul>

  <div id="wrap">
    <div id="main" class="container">
      <div class="col-md-12" ng-view></div>
  </div>

</body>
</html>
